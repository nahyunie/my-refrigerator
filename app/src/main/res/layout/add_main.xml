<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a1c448"
    android:backgroundTint="#a1c448">

    <ImageButton
        android:id="@+id/btn6"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.506"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/camera" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="129dp"
        android:layout_height="79dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#A1BD7F"
        android:fontFamily="@font/cookie_r"
        android:gravity="center"
        android:text="카메라로 \n 찍어서 추가"
        android:textColor="#FDFFFC"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn6"
        app:layout_constraintVertical_bias="0.082" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:backgroundTint="#A1BD7F"
        android:fontFamily="@font/cookie_bold"
        android:gravity="center"
        android:text="음식 재료를 \n 추가하시겠습니까?"
        android:textColor="#FDFFFC"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16" />

    <ImageButton
        android:id="@+id/btn7"
        android:layout_width="120dp"
        android:layout_height="95dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="45dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/search1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="140dp"
        android:layout_height="86dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="35dp"
        android:backgroundTint="#A1BD7F"
        android:fontFamily="@font/cookie_r"
        android:gravity="center"
        android:text="직접 추가하기"
        android:textColor="#FDFFFC"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn7"
        app:layout_constraintVertical_bias="0.072" />

</androidx.constraintlayout.widget.ConstraintLayout>